<idea-plugin package="com.daxode.odinbrains.debugger">
    <depends>com.intellij.modules.cidr.debugger</depends>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="com.daxode.odinbrains.debugger.execution.binary.ConfigTypeBinary"/>

        <programRunner implementation="com.daxode.odinbrains.debugger.runner.run.ZigDebugRunnerRun"
                       id="ZigDebugRunnerRun"/>
        <programRunner implementation="com.daxode.odinbrains.debugger.runner.test.ZigDebugRunnerTest"
                       id="ZigDebugRunnerTest"/>
        <programRunner implementation="com.daxode.odinbrains.debugger.runner.build.ZigDebugRunnerBuild"
                       id="ZigDebugRunnerBuild"/>
        <programRunner implementation="com.daxode.odinbrains.debugger.runner.binary.ZigDebugRunnerBinary"
                       id="ZigDebugRunnerBinary"/>

        <xdebugger.settings implementation="com.daxode.odinbrains.debugger.settings.ZigDebuggerSettings"/>

        <notificationGroup displayType="BALLOON"
                           bundle="odinbrains.Bundle"
                           key="notif-debug-info"
                           id="OdinBrains.Debugger.Info"/>
        <notificationGroup displayType="BALLOON"
                           bundle="odinbrains.Bundle"
                           key="notif-debug-warn"
                           id="OdinBrains.Debugger.Warn"/>
        <notificationGroup displayType="BALLOON"
                           bundle="odinbrains.Bundle"
                           key="notif-debug-error"
                           id="OdinBrains.Debugger.Error"/>
    </extensions>

    <extensions defaultExtensionNs="com.daxode.odinbrains">
        <featureProvider implementation="com.daxode.odinbrains.debugger.DebuggerFeatures"/>
        <debuggerDriverProvider id="ZigDefaultDebuggerDriverConfigurationProvider"
                                implementation="com.daxode.odinbrains.debugger.ZigDefaultDebuggerDriverConfigurationProvider"
                                order="last"/>
    </extensions>

    <extensions defaultExtensionNs="cidr.debugger">
        <languageSupport language="Zig" implementationClass="com.daxode.odinbrains.debugger.ZigDebuggerLanguageSupport"/>
        <editorsExtension language="Zig" implementationClass="com.daxode.odinbrains.debugger.ZigDebuggerEditorsExtension"/>
        <lineBreakpointFileTypesProvider implementation="com.daxode.odinbrains.debugger.ZigLineBreakpointFileTypesProvider"/>
        <localVariablesFilterHandler implementation="com.daxode.odinbrains.debugger.ZigVariablesFilterHandler"/>
    </extensions>
</idea-plugin>